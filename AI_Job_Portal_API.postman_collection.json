            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Java Developer\",\n  \"description\": \"We are looking for a senior Java developer with expertise in Spring Boot and microservices architecture.\",\n  \"requirements\": \"• 5+ years of Java experience\\n• Spring Boot expertise\\n• Microservices architecture\\n• PostgreSQL knowledge\",\n  \"location\": \"San Francisco, CA\",\n  \"salaryMin\": 120000,\n  \"salaryMax\": 180000,\n  \"skillsRequired\": [\"Java\", \"Spring Boot\", \"PostgreSQL\", \"Docker\"],\n  \"experienceLevel\": \"SENIOR\",\n  \"jobType\": \"FULL_TIME\",\n  \"remote\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "header": [],
